services:
  pihole:
    env_file:
      - .env
    container_name: pihole
    image: pihole/pihole:latest
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "67:67/udp"
      - "80:80/tcp"
    volumes:
      - './etc-pihole:/etc/pihole:z'
      - './etc-dnsmasq.d:/etc/dnsmasq.d:z'
    cap_add:
      - NET_ADMIN
